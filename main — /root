<script>
  function getFormData(){
    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();
    const msg = document.getElementById('msg').value.trim();
    return {name,email,msg};
  }

  function sendViaWhatsApp(){
    const {name,msg} = getFormData();
    if(!name || !msg){alert('Por favor preencha nome e mensagem.');return}
    const text = encodeURIComponent(`Contato UNOCAR
Nome: ${name}
Mensagem: ${msg}`);
    const url = `https://wa.me/5542999891307?text=${text}`;
    window.open(url,'_blank');
  }

  function sendViaEmail(){
    const {name,email,msg} = getFormData();
    if(!name || !email || !msg){alert('Por favor preencha todos os campos.');return}
    const subject = encodeURIComponent('Contato via site - UNOCAR');
    const body = encodeURIComponent(`Nome: ${name}
E-mail: ${email}

Mensagem:
${msg}`);
    window.location.href = `mailto:unicartecnologic@gmail.com?subject=${subject}&body=${body}`;
  }
</script>

